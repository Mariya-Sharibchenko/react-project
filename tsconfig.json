{
  "compilerOptions": {
    "target": "es5",
    "paths": {
      "context": [
        "./context"
      ],
      "mock": [
        "./mock"
      ],
      "public": [
        "../public"
      ],
      "atoms": [
        "./atoms"
      ],
      "molecules": [
        "./molecules"
      ],
      "organisms": [
        "./organisms"
      ],
      "pages": [
        "./pages"
      ],
      "templates": [
        "./templates"
      ],
      "utils": [
        "./utils"
      ]
    },
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "baseUrl": "src",
    "rootDir": "src"
  },
  "include": ["src"],
  "exclude": ["node_modules", "build", "scripts"]
}
